doctype
html(lang="en")
  head
    meta(charset="UTF-8")
    title Atributos (jade)
    
     
         
     
     
     
     
           
  body
    h1 Atributos (jade)
    // Un solo atributo
    a(href='http://www.google.com') Ir a Google
    // Varios atributos
    | &nbsp; | &nbsp;
    
    a(href='http://www.yahoo.com', target='_blank', class='link') Ir a Yahoo
    // Variable  
   - var color = true
    div(class=color ? 'verde' : 'rojo') Color
    br 
    br
    // Atributos eb varias lineas
    input(
    type='number'
    min='10'
    max='99'
    placeholder='#'
    )
    br
    br
    //Atributos Booleanos
    |falso
    input(
      type='radio'
      name='bool'
      checked = true
    )
    |verdadero
    input(
      type='radio'
      name='bool'
      checked = 'true'
    
    )
    br
    br
    //atributo style
    button(style={ 'background-color': 'crimson',
    color: 'white' , border: 'none' , padding:'10px'
    }) boton
    //atributos clase
    - var misclases = ['amarillo centrar rayado']
    h2(class=misclases) ADSI 1132816
    //Seccion Actual
    - var actual = '/servicios'
     nav
      li: a(class={active1: actual === '/'} href='/')  Inicio
      li: a(class={active: actual === '/nosotros'} href='nosotros')  Nosotros
      li: a(class={active: actual === '/servicios'} href='servicios')  Servicios
      li: a(class={active: actual === '/contactenos'} href='contactenos')  Contactenos
     //clases y identificadores literales
     .amarillo Texto
     br
     .amarillo.centrar.rayado Texto
     br
     #cod1 Texto
     br
     #cod1.amarillo.centrar.rayado Texto
     -var atributos = {'data-color':'red'};
      div(class="rojo")&attributes(atributos) lorem ipsum
   
    
    