section
	background-color #ccc
	height 150px
	margin 20px auto
	width 150px
	padding 20px
	border 2px solid black
	transition all 1s
	
	
	&:hover
		border 2px dotted black
		background-color rgba(255,255,255,0.2)
		transition all 1s
		
// interpolacion
vendor(prop,args)
	-webkit-{prop} args
	-moz-{prop} args
	-ms-{prop} args
	{prop} args
box-shadow()
	vendor('box-shadow',arguments)
filter()
	vendor('filter',arguments)
.box1
	box-shadow 0px 0px 10px #000
.box2
	box-shadow 2px 2px 10px red
.box3
	box-shadow 2px 2px 100px blue

nav
	border 1px solid #ccc
	padding 10px	
	margin 20px auto
	width 1016px
	height 1016px	
	border 2px solid
		
nav li
		 background url(../imgs/big.jpg) no-repeat center center
		 display inline-block
		 list-style none
		 height 330px
		 width 400px
		 margin-left 20px
nav:hover li
		 background url(../imgs/flor.jpg) no-repeat center center
		 display inline-block
		 list-style none
		 height 330px
		 width 400px
		 margin-left 20px
		
			
		 	
		 
		 
	li.img1
		filter grayscale(1)
		transition all 1s
		&:hover
			filter grayscale(0)
			transition all 1s
	li.img2
		filter brightness(0.5)
		transition all 1s
		&:hover
			filter brightness(1)
			transition all 1s
	li.img3
		filter contrast(0.5)
		transition all 1s
		&:hover
			filter contrast(1)
			transition all 1s
	li.img4
		filter hue-rotate(180deg)
		transition all 1s
		&:hover
			filter hue-rotate(0deg)
	li.img5
		filter opacity(0.5)
		transition all 1s
		&:hover
			filter opacity(1)


		
		 