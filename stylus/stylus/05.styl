section
	height 250px
	width 400px
	background-color #22DE2B
	margin 10px auto
/* Mezclador */
border-radius(N)
		-webkit-border-radius N
		-moz-border-radius N
		-ms-border-radius N
		border-radius N
border-multiple()
		-webkit-border-radius arguments
		-moz-border-radius arguments
		-ms-border-radius arguments
		border-radius arguments
.caja1
	border-radius(10px)
	border 2px solid black
	box-shadow 6px 8px 10px black
	transition all 1s
	&:hover
		transition all 1s
		background-color  rgba(53,33,91,1)
