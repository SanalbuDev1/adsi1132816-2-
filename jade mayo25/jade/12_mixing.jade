doctype
html(lang="en")
  head
    meta(charset="UTF-8")
    title Document
  body
  
    // Declaration
    mixin list
      ul
        li uno
        li dos
        li tres
     // Use
    +list
    +list
    
    hr
    
    mixin pet(name)
            li.pet= name
    ol
      li
            +pet('cat')
            +pet('dog')
            +pet('pig')
    hr
    mixin article(title)
      .article
        .article-wrapper
            h1= title
            if block
              block
            else
              p estoy aqui

    +article('hola mami')

    +article('Hello world')
      p This is my
      p Amazing article
      
    hr
    mixin link(href, name)
      //- attributes == {class: "btn"}
      a(class!=attributes.class, href=href)= name

    +link('/foo', 'foo')(class="btn")
    
    hr
    mixin list(id, ...items)
      ul(id=id)
        each item in items
         
         li= item

    +list('my-list', 1, 2, 3, 4)