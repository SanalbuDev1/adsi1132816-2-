/* selector universal*/
*
  font 1em Arial
/*selector de tipo etiqueta*/
h1
    margin 20px auto
    width 800px
    background-color : #ddd
    padding: 20px
    
section
   margin 20px auto
   width 800px
   background-color : #ddd
   padding: 20px

/*selector desendente*/
section article h2
    font-size 1.4em
section article p
  text-align justify
/* selector clase */
.claro
  background-color white
.oscuro
  background-color gray
.rojo
  color red
.minuscula
  text-transform lowercase
.mayuscula
  text-transform uppercase
/* selector ID */
#parr1
  padding 10px
#parr2
  padding 10px
  
/*selector combinado*/
section article h2.rojo
  font-weight bold
section article p#parr1
  color gray
  

  